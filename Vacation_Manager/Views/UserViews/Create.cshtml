                <input asp-for="FirstName" class="form-control" placeholder="Име" required />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="LastName" class="form-control" placeholder="Фамилия" required />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Team" class="form-control" placeholder="Екип" required />
                <span asp-validation-for="Team" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Role" class="form-control" placeholder="Права" required />
                <span asp-validation-for="Role" class="text-danger"></span>
