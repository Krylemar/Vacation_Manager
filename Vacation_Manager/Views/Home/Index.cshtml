@section Scripts {
    <script src="~/js/main.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js" integrity="sha384-w1Q4orYjBQndcko6MimVbzY0tgp4pWB4lZ7lr30WKz0vr/aWKhXdBNmNb5D92v7s" crossorigin="anonymous"></script>
}

@section Styles {
    <link href="~/css/main.css" rel="stylesheet" />
    <link href="http://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.3.0/css/font-awesome.css" rel="stylesheet" type='text/css'>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <img src="~/Images/logo.png" />
}

@{
    ViewData["Title"] = "Home Page";
}

<head>
    <title>Suplex Vacations</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body class="body">
    <header class="page-header header container-fluid">
            <div class="container">
                <div class="box">
                    <span></span>
                    <div class="content">
                        <h2><b>Платен отпуск</b></h2>
                        <p>За времето на платения годишен отпуск работодателят заплаща на работника възнаграждение, което се изчислява от начисленото среднодневно брутно трудово възнаграждение за последния календарен месец.</p>
                        @if (Startup.isLoged == true)
                        {
                            <a asp-area="" asp-controller="VacationViews" asp-action="Index">Изискване на отпуск</a>
                        }
                        else
                        {
                            <a asp-area="" asp-controller="UserViews" asp-action="Login">Изискване на отпуск</a>
                        }
                        </div>
                </div>
                <div class="box">
                    <span></span>
                    <div class="content">
                        <h2><b>Неплатен отпуск</b></h2>
                        <p>Работодателят по искане на работника може да му разреши неплатен отпуск независимо от това, дали е ползвал или не платения си годишен отпуск и независимо от продължителността на трудовия му стаж.</p>
                        @if (Startup.isLoged == true)
                        {
                            <a asp-area="" asp-controller="VacationViews" asp-action="Index">Изискване на отпуск</a>
                        }
                        else
                        {
                            <a asp-area="" asp-controller="UserViews" asp-action="Login">Изискване на отпуск</a>
                        }
                    </div>
                </div>
                <div class="box">
                    <span></span>
                    <div class="content">
                        <h2><b>Болничен отпуск</b></h2>
                        <p>Работник може да излезе в болничен не само когато не се чувства добре, но и когато трябва да гледа друг болен човек.</p>
                        @if (Startup.isLoged == true)
                        {
                            <a asp-area="" asp-controller="VacationViews" asp-action="Index">Изискване на отпуск</a>
                        }
                        else
                        {
                            <a asp-area="" asp-controller="UserViews" asp-action="Login">Изискване на отпуск</a>
                        }
                    </div>
                </div>
            </div>
    </header>
</body>