@{
}
@model Vacation_Manager.Models.VacationModels.VacationEditViewModel
<div>
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="VacationId" />
            <div class="form-group">
                <input type="datetime-local" asp-for="StartDate" value="@Model.StartDate">
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="datetime-local" asp-for="EndDate" value="@Model.EndDate">
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select asp-for="VacType">
                    <option value="Paid"> Платен</option>
                    <option value="Unpaid">Неплатен</option>
                    <option value="Sick">Болничен</option>
                </select>      
            </div>         
            <div class="form-group">
                <input type="submit" class="submission" value="Създаване" />
                <p></p>
                <a type="submit" asp-action="Index" class="btn btn-primary">Обратно към Служители</a>
            </div>
        </form>
    </div>
</div>
