@model Vacation_Manager.Models.VacationModels.VacationCreateViewModel

    <p></p>
    <p></p>
    <h1 style="color:white;margin-left: 10px;">Създай отпуск</h1>
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="datetime-local" asp-for="CreationDate" value="Изберете начална дата">
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="datetime-local" asp-for="EndDate" value="Изберете крайна дата">
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select asp-for="VacType">
                    <option selected disabled>-- Избери тип отпуск --</option>
                    <option value="Paid"> Платен</option>
                    <option value="Unpaid">Неплатен</option>
                    <option value="Sick">Болничен</option>
                </select>
                <span asp-validation-for="VacType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" class="submission" value="Създаване" />
                <p></p>
                <a type="submit" asp-action="Index" class="btn btn-primary">Обратно към Проекти</a>
            </div>
        </form>
    </div>