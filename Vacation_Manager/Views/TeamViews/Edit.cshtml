@{
}
@model Vacation_Manager.Models.TeamModels.TeamEditViewModel
<h1>Edit</h1>

<h4>Team</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TeamName" class="control-label"></label>
                <input asp-for="TeamName" class="form-control" />
                <span asp-validation-for="TeamName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LeaderId" class="control-label">Team Leader:</label>
                <select asp-for="LeaderId">
                    @foreach (var user in ViewBag.userItems)
                    {
                        <option value="@user.UserId">@string.Concat(user.FirstName, " ", user.LastName)</option>
                    }
                </select>
                <span asp-validation-for="LeaderId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjectId" class="control-label">Project:</label><br />
                <select asp-for="ProjectId">
                    <option>-- No Project --</option>
                    @foreach (var project in ViewBag.projectItems)
                    {
                        <option selected value="@project.ProjectId">@project.ProjectName</option>
                    }
                </select>
                <span asp-validation-for="ProjectId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
