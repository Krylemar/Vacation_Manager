@{
}
@model Vacation_Manager.Models.TeamModels.TeamEditViewModel
    <p></p>
    <p></p>
    <h1 style="color:white;margin-left: 10px;">Промени Екип</h1>
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="TeamName" placeholder="Име на екип" />
                <span asp-validation-for="TeamName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select asp-for="LeaderId">
                    <option selected disabled>-- Избери Team Lead --</option>
                    @foreach (var user in ViewBag.userItems)
                    {
                        <option value="@user.UserId">@string.Concat(user.FirstName, " ", user.LastName)</option>
                    }
                </select>
                <span asp-validation-for="LeaderId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select asp-for="ProjectId">
                    <option selected disabled>-- Избери проект --</option>
                    @foreach (var project in ViewBag.projectItems)
                    {
                        <option selected value="@project.ProjectId">@project.ProjectName</option>
                    }
                </select>
                <span asp-validation-for="ProjectId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" class="submission" value="Промени" />
                <p></p>
                <a type="submit" asp-action="Index" class="btn btn-primary">Обратно към Служители</a>
            </div>
        </form>
    </div>
