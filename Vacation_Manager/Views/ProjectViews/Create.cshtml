@model Vacation_Manager.Models.ProjectModels.ProjectCreateViewModel
    <p></p>
    <p></p>
    <h1 style="color:white;margin-left: 10px;">Създай проект</h1>
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="ProjectName" placeholder="Име на роект" />
                <span asp-validation-for="ProjectName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Description" placeholder="Описание" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" class="submission" value="Създаване" />
                <p></p>
                <a type="submit" asp-action="Index" class="btn btn-primary">Обратно към Проекти</a>
            </div>
        </form>
    </div>

